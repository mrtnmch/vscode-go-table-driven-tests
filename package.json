{
  "name": "go-table-driven-tests",
  "displayName": "Go Table-Driven Tests",
  "author": "Martin Mach",
  "publisher": "mrtnmch",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrtnmch/vscode-go-table-driven-tests"
  },
  "description": "Run individual table-driven test cases in Go",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "go-table-tests.runTest",
        "title": "Go: Run Table Test Case"
      },
      {
        "command": "go-table-tests.debugTest",
        "title": "Go: Debug Table Test Case"
      }
    ],
    "configuration": {
      "title": "Go Table-Driven Tests",
      "properties": {
        "goTableTests.debounceDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before refreshing CodeLens after document changes",
          "minimum": 0,
          "maximum": 5000
        },
        "goTableTests.reuseTerminal": {
          "type": "boolean",
          "default": true,
          "description": "Reuse the same terminal for running tests instead of creating a new one each time"
        },
        "goTableTests.showOutputChannel": {
          "type": "boolean",
          "default": true,
          "description": "Show the output channel when running tests"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.x",
    "mocha": "^10.2.0",
    "typescript": "^5.3.0"
  }
}
